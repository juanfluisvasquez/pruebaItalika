@model List<DemoData.MotosItalika>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>DEMO CLIENTE Italika </h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<a title="Agregar" href="@Url.Action("Create","Home")">Agregar</a>
<br />
<table id="mytable" class="responsive-table striped" style="width: 100%">
    <thead>
        <tr role="row">
            <th>idMotos</th>
            <th>SKU</th>
            <th>Fert</th>
            <th>Modelo</th>
            <th>IdTipo</th>
            <th>NumSerie</th>
            <th>Fecha</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idMotos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SKU)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Fert)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipo)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.NumSerie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @*<a title="Eliminar" href="@Url.Action("Delete","Home", new {mti= item.})">Eliminar</a>*@
                @Html.ActionLink("Borrar", "Delete", new { id = item.idMotos })
            </td>
        </tr>            }
    </tbody>
</table>
</div>


